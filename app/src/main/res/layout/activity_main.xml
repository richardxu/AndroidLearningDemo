<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="richard.example.com.androidlearningdemo.MainActivity">

    <Button
        android:text="Activity LifeCircle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:id="@+id/button_activity" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview_activities"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button_activity" />

    <Button
        android:text="MyApplication Context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_context"
        android:layout_below="@+id/button_activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

    <Button
        android:text="Fragment Cycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_fragment_cycle"
        android:layout_below="@+id/button_context"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

    <Button
        android:text="Fragment TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_fragment_tablayout"
        android:layout_below="@+id/button_fragment_cycle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

    <Button
        android:text="Dialog Fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_fragment_dialog"
        android:layout_below="@+id/button_fragment_tablayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

    <Button
        android:text="WebView Fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_fragment_webview"
        android:layout_below="@+id/button_fragment_dialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

    <Button
        android:text="toolBar Fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_fragment_toolbar"
        android:layout_below="@+id/button_fragment_webview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

</RelativeLayout>
